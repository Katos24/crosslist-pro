generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  listings      Listing[]
  ebayToken     String?
  ebayRefreshToken String?
  fbToken       String?
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  category    String?
  condition   String?
  images      String[]
  
  ebayId      String?
  ebayStatus  String?
  ebayUrl     String?
  
  fbId        String?
  fbStatus    String?
  fbUrl       String?
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  soldAt      DateTime?
}
