generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  name             String?
  createdAt        DateTime  @default(now())
  
  // eBay OAuth
  ebayAccessToken  String?
  ebayRefreshToken String?
  ebayTokenExpiry  DateTime?
  
  listings         Listing[]
}

model Listing {
  id          String    @id @default(cuid())
  title       String
  description String
  price       Float
  category    String
  condition   String
  images      String[]
  
  // Flexible item specifics (brand, color, size, ISBN, etc.)
  itemSpecifics Json?
  
  // eBay
  ebayId      String?
  ebayStatus  String?
  ebayUrl     String?
  
  // Facebook
  fbId        String?
  fbStatus    String?
  fbUrl       String?
  
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  soldAt      DateTime?
}
